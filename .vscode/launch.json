    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python App Backend",
            "type": "debugpy",
            "request": "launch",
            "module": "quart",
            "env": {
                "QUART_APP": "src.quartapp",
                "QUART_ENV": "development",
                "QUART_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-reload",
                "-p 50505"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}